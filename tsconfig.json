{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "rootDir": "./src",
        "strict": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
    },
    "exclude": [
        "node_modules"
    ]
}
