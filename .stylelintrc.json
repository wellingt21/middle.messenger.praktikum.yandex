{
    "plugins": [
        "stylelint-scss"
    ],
    "extends": "stylelint-config-recommended-scss",
  "rules": {
    "color-hex-case": "lower",
    "selector-class-pattern": null,
    "string-quotes": "single",
    "max-empty-lines": 1,
    "scss/at-rule-no-unknown": null,
    "no-descending-specificity": null
  },
  "ignoreFiles": [
    "dist/*",
    "node_modules/*",
      "src/styles/utilities/*"
  ]
}
